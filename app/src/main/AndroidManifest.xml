<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apptroid.e_krushimitra.com">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ActivitySplash"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityWelcome"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityNotLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityLogin"
            android:label="@string/log_in"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityPreLogin"
            android:label="@string/log_in"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityRegister"
            android:label="@string/sign_up"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SearchedScheme"
            android:label="@string/scheme"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MandiSecondActivity"
            android:label="Mandi"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.VendorsMandiActivity"
            android:label="Mandi"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:label="Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ChangeLanguageActivity"
            android:configChanges="locale"
            android:label="Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ProbSolSchemeList"
            android:label="@string/scheme"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ApplicableScheme"
            android:label="@string/scheme"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AppliedScheme"
            android:label="@string/scheme"
            android:noHistory="true"
            android:parentActivityName="activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AppliedSolScheme"
            android:label="@string/scheme" />
        <activity
            android:name=".activities.SchemeForm"
            android:label="@string/scheme"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activities.GeneratedPdf"
            android:label="@string/scheme"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activities.FormsLists"
            android:label="@string/scheme"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activities.ViewForm"></activity>
    </application>

</manifest>