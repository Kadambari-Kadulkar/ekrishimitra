<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:layout_weight="0.12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign Up"
                android:id="@+id/textView3"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#333" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="22dp"
            android:padding="8dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:background="@drawable/green_white_rounded_corner">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/editTextName"
                android:hint="Name"
                android:backgroundTint="#ffffff"
                android:gravity="left|center"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="-18dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:background="@drawable/green_white_rounded_corner">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextEmail"
                android:hint="Email Address"
                android:backgroundTint="#ffffff"
                android:background="#fff"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:background="@drawable/green_white_rounded_corner"
            android:layout_marginTop="6dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextPass"
                android:hint="Password"
                android:backgroundTint="#ffffff"
                android:background="#fff"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:background="@drawable/green_white_rounded_corner"
            android:layout_marginTop="6dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextPhone"
                android:hint="Mobile No."
                android:backgroundTint="#ffffff"
                android:background="#fff"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_weight="0.12"
            android:gravity="center"

            android:layout_marginTop="6dp">


            <Spinner
                android:id="@+id/state_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/FirstSpinnerTheme"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_weight="0.12"
            android:gravity="center"

            android:layout_marginTop="6dp">


            <Spinner
                android:id="@+id/filter_city_spinner"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                style="@style/FirstSpinnerTheme"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textViewLogin"
            android:text="Already a member ? Log In!"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:layout_marginRight="22dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:textColor="#333" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="45dp"
            android:gravity="center"
            android:background="@drawable/green_rounded_corner"
            android:layout_weight="0.12"
            android:layout_marginTop="20dp"
            android:id="@+id/LinLaySignup">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="20sp"
                android:text="Sign Up"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
