<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view background color -->
    <solid
        android:color="#fff" >
    </solid>

    <!--&lt;!&ndash; view border color and width &ndash;&gt;-->
    <stroke
        android:width="1dip"
        android:color="#111" >
    </stroke>

    <!-- If you want to add some padding -->
    <padding
        android:left="24dp"
        android:top="24dp"
        android:right="24dp"
        android:bottom="24dp">
    </padding>

    <!-- Here is the corner radius -->
    <corners
        android:radius="10dp"   >
    </corners>

</shape>